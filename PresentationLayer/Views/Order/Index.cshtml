@{
    ViewData["Title"] = "Lista de pedidos pendientes";
}

@model List<DataAccess.Order>

<h2>@ViewData["Title"]</h2>


<table class="table">
    <thead>
        <tr>
            <th>OrderID</th>
            <th>OrderDate</th>
            <th>ShipName</th>
            <th>Phone</th>
            <th>Estado</th>
            <th>Opciones del administrador</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.OrderDate</td>
                <td>@order.ShipName</td>
                <td>@order.Phone</td>
                <td>@order.Estado</td>

                <td>
                    <a asp-action="Tracking" asp-route-id="@order.OrderID" class="btn btn-warning">Detalle</a>
                    <a asp-action="Edit" asp-route-id="@order.OrderID" class="btn btn-warning">Seguimiento</a>
                </td>

            </tr>
        }
    </tbody>
</table>
